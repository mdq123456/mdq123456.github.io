---
import Layout from '../layouts/Layout.astro';
import ThemeSelector from '../components/ThemeSelector.astro';
import {api} from '../services/api';
import type {Skill} from '../types';

// Obtener datos
const profile = await api.getProfile();
const skillCategories = await api.getSkills();
const timeline = await api.getTimeline();
const projects = await api.getProjects();
---

<Layout>
  <ThemeSelector />
  <main
    class='min-h-screen bg-gradient-to-br from-slate-50 via-white to-blue-50'
  >
    <!-- Hero Section -->
    <section class='relative py-20 px-4'>
      <div class='container mx-auto text-center'>
        <div class='relative inline-block mb-6'>
          <h1
            class='text-6xl font-extrabold bg-gradient-to-r from-blue-600 via-purple-600 to-blue-800 bg-clip-text text-transparent leading-tight'
            style='padding-bottom: 0.2em;'
          >
            {profile.name}
          </h1>
          <div
            class='absolute -top-2 -right-2 w-4 h-4 bg-blue-500 rounded-full animate-pulse'
          >
          </div>
        </div>

        <p class='text-2xl text-slate-600 mb-8 font-medium'>{profile.role}</p>

        <div class='max-w-3xl mx-auto space-y-4'>
          {
            profile.bio.map((paragraph) => (
              <p class='text-lg text-slate-600 leading-relaxed'>{paragraph}</p>
            ))
          }
        </div>

        <!-- Scroll indicator -->
        <div class='mt-16 animate-bounce'>
          <svg
            class='w-6 h-6 mx-auto text-blue-500'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M19 14l-7 7m0 0l-7-7m7 7V3'></path>
          </svg>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class='py-16 px-4'>
      <div class='container mx-auto'>
        <h2 class='text-4xl font-bold text-center mb-4 text-slate-800'>
          Habilidades
        </h2>
        <p class='text-center text-slate-600 mb-8 max-w-2xl mx-auto'>
          Evolución continua desde Visual Basic 6 hasta tecnologías modernas
        </p>
        <div class='w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mb-12 rounded-full'></div>
        
        <!-- Línea de evolución tecnológica -->
        <div class='mb-12 bg-white rounded-2xl shadow-lg p-6 border border-slate-100'>
          <h3 class='text-xl font-semibold text-center mb-6 text-slate-800'>Evolución Tecnológica</h3>
          <div class='flex flex-wrap justify-center items-center gap-3 text-sm'>
            <span class='px-3 py-1 bg-red-50 text-red-700 rounded-full border border-red-200'>VB6</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-orange-50 text-orange-700 rounded-full border border-orange-200'>C#</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-yellow-50 text-yellow-700 rounded-full border border-yellow-200'>SQL</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-green-50 text-green-700 rounded-full border border-green-200'>JavaScript</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-blue-50 text-blue-700 rounded-full border border-blue-200'>React Native</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full border border-indigo-200'>TypeScript</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-purple-50 text-purple-700 rounded-full border border-purple-200'>Vercel</span>
            <svg class='w-4 h-4 text-slate-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 5l7 7-7 7'></path>
            </svg>
            <span class='px-3 py-1 bg-pink-50 text-slate-800 rounded-full border border-pink-200 ring-2 ring-pink-300 animate-pulse'>Astro</span>
          </div>
        </div>

        <div class='grid gap-8 md:grid-cols-2 lg:grid-cols-3'>
          <!-- Technical Skills -->
          <div
            class='bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-slate-100'
          >
            <div class='flex items-center mb-6'>
              <div
                class='w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4'
              >
                <svg
                  class='w-6 h-6 text-blue-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'></path>
                </svg>
              </div>
              <h3 class='text-xl font-semibold text-slate-800'>Tecnologías</h3>
            </div>
            <div class='flex flex-wrap gap-2'>
              {
                skillCategories.technical.map((skill) => (
                  <span class='px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm font-medium hover:bg-blue-100 transition-colors'>
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <!-- Frameworks -->
          <div
            class='bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-slate-100'
          >
            <div class='flex items-center mb-6'>
              <div
                class='w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4'
              >
                <svg
                  class='w-6 h-6 text-purple-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'
                  ></path>
                </svg>
              </div>
              <h3 class='text-xl font-semibold text-slate-800'>Frameworks</h3>
            </div>
            <div class='flex flex-wrap gap-2'>
              {
                skillCategories.frameworks.map((skill) => (
                  <span class='px-3 py-1 bg-purple-50 text-purple-700 rounded-full text-sm font-medium hover:bg-purple-100 transition-colors'>
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          <!-- Tools -->
          <div
            class='bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-slate-100'
          >
            <div class='flex items-center mb-6'>
              <div
                class='w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4'
              >
                <svg
                  class='w-6 h-6 text-green-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z'
                  ></path>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M15 12a3 3 0 11-6 0 3 3 0 016 0z'></path>
                </svg>
              </div>
              <h3 class='text-xl font-semibold text-slate-800'>Herramientas</h3>
            </div>
            <div class='flex flex-wrap gap-2'>
              {
                skillCategories.tools.map((skill) => (
                  <span class='px-3 py-1 bg-green-50 text-green-700 rounded-full text-sm font-medium hover:bg-green-100 transition-colors'>
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Soft Skills -->
        <div
          class='mt-12 bg-gradient-to-r from-blue-50 to-purple-50 rounded-3xl p-8'
        >
          <h3 class='text-2xl font-bold text-center mb-8 text-slate-800'>
            Habilidades Blandas
          </h3>
          <div class='grid gap-4 md:grid-cols-2 lg:grid-cols-4'>
            {
              Object.entries(skillCategories.soft).map(
                ([skill, description]) => (
                  <div class='group relative'>
                    <div 
                      class='bg-white rounded-xl p-4 shadow-md hover:shadow-lg transition-all duration-300 cursor-pointer border border-slate-100 focus:ring-2 focus:ring-blue-500 focus:outline-none'
                      tabindex='0'
                      role='button'
                      aria-describedby={`tooltip-${skill.replace(/\s+/g, '-').toLowerCase()}`}
                    >
                      <span class='text-slate-700 font-medium'>{skill}</span>
                      <div 
                        id={`tooltip-${skill.replace(/\s+/g, '-').toLowerCase()}`}
                        class='absolute bottom-full left-1/2 transform -translate-x-1/2 mb-3 px-4 py-3 bg-gray-900 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 group-focus:opacity-100 transition-opacity duration-300 pointer-events-none z-20 max-w-xs text-center shadow-xl border border-gray-700'
                        role='tooltip'
                      >
                        {description}
                        <div class='absolute top-full left-1/2 transform -translate-x-1/2 border-4 border-transparent border-t-gray-900' />
                      </div>
                    </div>
                  </div>
                )
              )
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class='py-16 px-4 bg-white'>
      <div class='container mx-auto'>
        <h2 class='text-4xl font-bold text-center mb-16 text-slate-800'>
          Experiencia
          <div
            class='w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-4 rounded-full'
          >
          </div>
        </h2>

        <div class='relative'>
          <div
            class='absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-blue-500 to-purple-500 rounded-full'
          >
          </div>

          {
            timeline.map((item, index) => (
              <div
                class={`relative mb-12 ${index % 2 === 0 ? 'md:text-right md:pr-1/2' : 'md:text-left md:pl-1/2'}`}
              >
                <div class={`md:w-1/2 ${index % 2 === 0 ? 'md:ml-auto' : ''}`}>
                  <div class='bg-white rounded-2xl shadow-lg p-6 border border-slate-100 hover:shadow-xl transition-all duration-300'>
                    <div class='flex items-center mb-4'>
                      <div class='w-3 h-3 bg-blue-500 rounded-full mr-3' />
                      <span class='text-blue-600 font-semibold'>
                        {item.period}
                      </span>
                    </div>
                    <h3 class='text-xl font-bold text-slate-800 mb-2'>
                      {item.title}
                    </h3>
                    <p class='text-slate-600 mb-4'>{item.description}</p>
                    {item.technologies && (
                      <div class='flex flex-wrap gap-2'>
                        {item.technologies.map((tech) => (
                          <span class='px-2 py-1 bg-slate-100 text-slate-600 rounded text-xs'>
                            {tech}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>

                <div class='absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-blue-500 rounded-full border-4 border-white shadow-lg' />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class='py-16 px-4 bg-gradient-to-br from-slate-50 to-blue-50'>
      <div class='container mx-auto'>
        <h2 class='text-4xl font-bold text-center mb-16 text-slate-800'>
          Proyectos
          <div
            class='w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-4 rounded-full'
          >
          </div>
        </h2>

        <div class='grid gap-8 md:grid-cols-2 lg:grid-cols-3'>
          {
            projects.map((project) => (
              <div class='bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-slate-100 group'>
                <div class='p-6'>
                  <h3 class='text-xl font-bold text-slate-800 mb-3 group-hover:text-blue-600 transition-colors'>
                    {project.title}
                  </h3>
                  <p class='text-slate-600 mb-4 leading-relaxed'>
                    {project.description}
                  </p>

                  <div class='flex flex-wrap gap-2 mb-4'>
                    {project.technologies.map((tech) => (
                      <span class='px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-sm hover:bg-blue-50 hover:text-blue-600 transition-colors'>
                        {tech}
                      </span>
                    ))}
                  </div>

                  {project.link && (
                    <a
                      href={project.link}
                      class='inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors'
                      target='_blank'
                      rel='noopener noreferrer'
                    >
                      Ver proyecto
                      <svg
                        class='w-4 h-4 ml-1'
                        fill='none'
                        stroke='currentColor'
                        viewBox='0 0 24 24'
                      >
                        <path
                          stroke-linecap='round'
                          stroke-linejoin='round'
                          stroke-width='2'
                          d='M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14'
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class='py-16 px-4 bg-slate-800'>
      <div class='container mx-auto text-center'>
        <h2 class='text-4xl font-bold mb-8 text-white'>Contacto</h2>
        <p class='text-xl text-slate-300 mb-12 max-w-2xl mx-auto'>
          ¿Tienes un proyecto en mente? ¡Hablemos y hagámoslo realidad!
        </p>

        <div class='flex justify-center space-x-6'>
          <a
            href='mailto:tu@email.com'
            class='flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium'
          >
            <svg
              class='w-5 h-5 mr-2'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M3 8l7.89 4.76a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
              ></path>
            </svg>
            Email
          </a>

          <a
            href='https://linkedin.com/in/tu-perfil'
            class='flex items-center px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors font-medium'
            target='_blank'
            rel='noopener noreferrer'
          >
            <svg class='w-5 h-5 mr-2' fill='currentColor' viewBox='0 0 24 24'>
              <path
                d='M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z'
              ></path>
            </svg>
            LinkedIn
          </a>

          <a
            href='https://github.com/tu-usuario'
            class='flex items-center px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors font-medium'
            target='_blank'
            rel='noopener noreferrer'
          >
            <svg class='w-5 h-5 mr-2' fill='currentColor' viewBox='0 0 24 24'>
              <path
                d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'
              ></path>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
