                    'Resoluci칩n de problemas': 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
                    'Trabajo en equipo': 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m3 5.197v1a2 2 0 11-4 0v-1m4 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v8.059',
                    'Mentoring': 'M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z',
                    'Gesti칩n de proyectos': 'M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01',
                    'Pensamiento anal칤tico': 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
                    'Adaptabilidad': 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15'
                  };
                  
                  // Niveles m치s realistas
                  const levels = ['Intermedio', 'Avanzado', 'Experto', 'Senior'];
                  const level = levels[index % levels.length];
                  
                  // Colores espec칤ficos para cada skill
                  const colorClasses = [
                    'from-blue-500 to-blue-600',
                    'from-green-500 to-green-600', 
                    'from-purple-500 to-purple-600',
                    'from-orange-500 to-orange-600',
                    'from-red-500 to-red-600',
                    'from-indigo-500 to-indigo-600',
                    'from-teal-500 to-teal-600',
                    'from-pink-500 to-pink-600'
                  ];
                  
                  return (
                    <div class='skill-card group relative bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm hover:shadow-md transition-all duration-300' tabindex='0' role='article' aria-label={`Habilidad: ${skill}`}>
                      <div class='relative p-6'>
                        <!-- Header con icono y t칤tulo -->
                        <div class='flex items-start gap-4 mb-3'>
                          <div class={`flex-shrink-0 w-10 h-10 bg-gradient-to-br ${colorClasses[index]} rounded-lg flex items-center justify-center shadow-sm`} aria-hidden='true'>
                            <svg class='w-5 h-5 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d={icons[skill as keyof typeof icons] || icons['Adaptabilidad']} />
                            </svg>
                          </div>
                          <div class='flex-1 min-w-0'>
                            <h4 class='text-base font-semibold text-slate-800 leading-tight mb-2'>
                              {skill}
                            </h4>
                            <!-- Texto que se expande suavemente en el mismo lugar -->
                            <div class='skill-text-container'>
                              <p class='text-sm text-slate-600 leading-relaxed line-clamp-2 group-hover:line-clamp-none group-focus:line-clamp-none transition-all duration-500 ease-out'>
                                {description}
                              </p>
                            </div>
                          </div>
                        </div>
                        
                        <!-- Badge de nivel -->
                        <div class='mt-3 flex items-center justify-between'>
                          <div class='flex items-center gap-2'>
                            <span class='text-xs text-slate-600 font-medium'>Nivel:</span>
                            <span class='text-xs text-slate-700 font-semibold'>{level}</span>
                          </div>
                          <!-- Indicador visual sutil -->
                          <div class='w-2 h-2 bg-slate-300 rounded-full group-hover:bg-slate-400 group-focus:bg-slate-400 transition-colors duration-200' aria-hidden='true'></div>
