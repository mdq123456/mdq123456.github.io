            </div>
            <div class='flex flex-wrap gap-2'>
              {
                skillCategories.tools.map((skill) => (
                  <span class='px-3 py-1 bg-green-50 text-green-700 rounded-full text-sm font-medium hover:bg-green-100 transition-colors'>
                    {skill}
                  </span>
                ))
