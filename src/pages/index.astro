            </div>
          </div>
        </div>

        <!-- Soft Skills -->
        <div
          class='mt-12 bg-gradient-to-r from-blue-50 to-purple-50 rounded-3xl p-8'
        >
          <h3 class='text-2xl font-bold text-center mb-8 text-slate-800'>
            Competencias Profesionales
          </h3>
          <p class='text-center text-slate-600 mb-8 max-w-2xl mx-auto text-sm'>
            Habilidades interpersonales y competencias desarrolladas a lo largo de mi trayectoria profesional
          </p>
          <div class='grid gap-6 sm:grid-cols-2 lg:grid-cols-3'>
            {
              Object.entries(skillCategories.soft).map(
                ([skill, description], index) => {
                  // Iconos espec칤ficos para cada skill
                  const icons = {
                    'Liderazgo t칠cnico': 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
