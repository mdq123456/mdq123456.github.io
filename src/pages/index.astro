---
import Layout from '../layouts/Layout.astro';
import {api} from '../services/api';
import type {Skill} from '../types';

// Obtener datos
const profile = await api.getProfile();
const skillCategories = await api.getSkills();
const timeline = await api.getTimeline();
const projects = await api.getProjects();
---

<Layout>
  <main class='container mx-auto px-4 py-8'>
    <!-- Hero Section -->
    <section class='text-center py-20'>
      <h1 class='text-5xl font-bold mb-4'>{profile.name}</h1>
      <p class='text-xl text-gray-600 mb-8'>{profile.role}</p>
      <div class='max-w-2xl mx-auto text-gray-600'>
        {profile.bio.map((paragraph) => <p class='mt-4'>{paragraph}</p>)}
      </div>
    </section>

    <!-- Skills Section -->
    <section class='py-16 bg-gradient-to-br from-gray-50 to-blue-50'>
      <div class='max-w-6xl mx-auto'>
        <h2 class='text-4xl font-bold text-center mb-4 text-gray-800'>Habilidades</h2>
        <p class='text-center text-gray-600 mb-12 max-w-2xl mx-auto'>
          Una combinación de competencias técnicas y habilidades interpersonales que me permiten crear soluciones efectivas y liderar equipos exitosamente.
        </p>
        
        <div class='grid lg:grid-cols-2 gap-12'>
          <!-- Technical Skills -->
          <div class='bg-white rounded-2xl p-8 shadow-lg border border-gray-100'>
            <div class='flex items-center mb-6'>
              <div class='w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center mr-4'>
                <svg class='w-6 h-6 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'></path>
                </svg>
              </div>
              <div>
                <h3 class='text-2xl font-bold text-gray-800'>Habilidades Técnicas</h3>
                <p class='text-gray-600 text-sm'>Tecnologías y herramientas de desarrollo</p>
              </div>
            </div>
            <div class='grid grid-cols-2 sm:grid-cols-3 gap-3'>
              {skillCategories.technical.map((skill: string) => (
                <div class='group'>
                  <span class='block bg-gradient-to-r from-blue-50 to-blue-100 text-blue-700 hover:from-blue-100 hover:to-blue-200 hover:text-blue-800 px-4 py-3 rounded-xl text-center transition-all duration-300 cursor-default font-medium shadow-sm hover:shadow-md transform hover:-translate-y-1'>
                    {skill}
                  </span>
                </div>
              ))}
            </div>
          </div>

          <!-- Soft Skills -->
          <div class='bg-white rounded-2xl p-8 shadow-lg border border-gray-100'>
            <div class='flex items-center mb-6'>
              <div class='w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center mr-4'>
                <svg class='w-6 h-6 text-white' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'></path>
                </svg>
              </div>
              <div>
                <h3 class='text-2xl font-bold text-gray-800'>Habilidades Interpersonales</h3>
                <p class='text-gray-600 text-sm'>Competencias de liderazgo y colaboración</p>
              </div>
            </div>
            <div class='grid grid-cols-1 sm:grid-cols-2 gap-4'>
              {(skillCategories.soft as Skill[]).map((skill) => (
                <div class='group relative'>
                  <div class='bg-gradient-to-r from-orange-50 to-orange-100 hover:from-orange-100 hover:to-orange-200 p-4 rounded-xl transition-all duration-300 cursor-help shadow-sm hover:shadow-md transform hover:-translate-y-1'>
                    <div class='flex items-center justify-between'>
                      <span class='font-medium text-orange-800'>{skill.name}</span>
                      <svg class='w-4 h-4 text-orange-600 opacity-60' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                      </svg>
                    </div>
                  </div>
                  
                  <!-- Tooltip -->
                  <div class='absolute z-20 w-80 p-5 bg-white rounded-xl shadow-xl border border-gray-200 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-300 left-1/2 -translate-x-1/2 mt-3 backdrop-blur-sm'>
                    <div class='absolute -top-2 left-1/2 -translate-x-1/2 w-4 h-4 bg-white border-l border-t border-gray-200 rotate-45'></div>
                    <h4 class='font-semibold text-gray-800 mb-3 text-center'>{skill.name}</h4>
                    <ul class='text-sm text-gray-600 space-y-2'>
                      {skill.details.map((detail) => (
                        <li class='flex items-start gap-2'>
                          <div class='w-1.5 h-1.5 bg-orange-400 rounded-full mt-2 flex-shrink-0'></div>
                          <span>{detail}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class='py-10'>
      <h2 class='text-3xl font-bold text-center mb-8'>Evolución Profesional</h2>
      <div class='max-w-4xl mx-auto'>
        {
          timeline.map((item) => (
            <div class='flex gap-4 mb-12'>
              <div class='w-32 flex-shrink-0'>
                <span class='font-bold text-blue-600'>{item.period}</span>
                <p class='text-sm text-gray-500 mt-1'>{item.company}</p>
              </div>
              <div class='flex-1'>
                <div class='bg-white p-6 rounded-lg shadow-md border border-gray-100'>
                  <h3 class='font-bold text-xl mb-4 text-blue-800'>
                    {item.role}
                  </h3>
                  <div class='flex justify-center gap-6'>
                    <div class='mb-4'>
                      <ul class='list-disc list-inside space-y-2 text-gray-600'>
                        {item.highlights.map((highlight) => (
                          <li>{highlight}</li>
                        ))}
                      </ul>
                    </div>
                    <div class='mb-4'>
                      <h4 class='font-semibold mb-2 text-gray-700'>
                        Tecnologías clave:
                      </h4>
                      <div class='flex flex-wrap gap-2'>
                        {item.technologies.map((tech) => (
                          <span class='bg-blue-50 text-blue-700 px-2 py-1 rounded text-sm'>
                            {tech}
                          </span>
                        ))}
                      </div>
                    </div>
                  </div>
                  <div class='mt-4 pt-4 border-t border-gray-100'>
                    <p class='text-gray-700'>
                      <span class='font-semibold'>Logro destacado:</span>{' '}
                      {item.achievements}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Projects Section -->
    <section class='py-10'>
      <h2 class='text-3xl font-bold text-center mb-8'>Proyectos</h2>
      <div class='grid md:grid-cols-2 gap-8'>
        {
          projects.map((project) => (
            <div class='border rounded-lg p-6'>
              <h3 class='text-xl font-bold mb-2'>{project.title}</h3>
              <p class='text-gray-600 mb-4'>{project.description}</p>
              <div class='flex flex-wrap gap-2'>
                {project.tech.map((tech) => (
                  <span class='bg-blue-100 text-blue-800 text-sm px-2 py-1 rounded'>
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Contact Section -->
    <section class='py-10 text-center'>
      <h2 class='text-3xl font-bold mb-8'>Contacto</h2>
      <div class='flex justify-center gap-4'>
        <a href='mailto:tu@email.com' class='text-gray-600 hover:text-gray-900'>
          Email
        </a>
        <a
          href='https://linkedin.com/in/tuusuario'
          class='text-gray-600 hover:text-gray-900'
        >
          LinkedIn
        </a>
        <a
          href='https://github.com/tuusuario'
          class='text-gray-600 hover:text-gray-900'
        >
          GitHub
        </a>
      </div>
    </section>
  </main>
</Layout>
